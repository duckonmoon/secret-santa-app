<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bootstrapRed</item>
        <item name="colorPrimaryDark">@color/mainAppColorDarker</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/mainAppColorDarker</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/ToolbarTitleTextAppearance</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/mainAppColorDarker</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/mainAppColorDarker</item>
        <item name="colorControlNormal">@color/mainAppColorDarker</item>
        <item name="colorControlActivated">@color/mainAppColorDarker</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rectangle_with_rounded_angles_red</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="android:TextAppearance">
        <item name="fontPath">fonts/Sail-Regular.otf</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
